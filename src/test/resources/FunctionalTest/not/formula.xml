<rules>
    <rule>
        <id>rule1</id>
        <formula>
            <not>
                <or>
                    <forall var="a" in="A">
                        <bfunc name="equal_const_x_0">
                            <!--a.x == 0-->
                            <param pos="var1" var="a"/>
                        </bfunc>
                    </forall>
                    <exists var="b" in="B" non-removable="B">
                        <bfunc name="equal_const_y_1">
                            <!--b.y == 1-->
                            <param pos="var1" var="b"/>
                        </bfunc>
                    </exists>
                </or>
            </not>
        </formula>
    </rule>

</rules>